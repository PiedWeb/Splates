{
  "name": "piedweb/splates",
  "description": "Splates, a native PHP template inspired by twig system that's fast, easy to use and easy to extend.",
  "keywords": [
    "league",
    "package",
    "templating",
    "templates",
    "views"
  ],
  "homepage": "https://dev.piedweb.com",
  "license": "MIT",
  "authors": [
    {
      "name": "Robin D. (ak Pied Web)",
      "email": "contact@piedweb.com",
      "homepage": "https://piedweb.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "symfony/var-dumper": "^7.2 || ^8",
    "phpstan/phpstan": "^2.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^13",
    "friendsofphp/php-cs-fixer": "^3.65"
  },
  "autoload": {
    "psr-4": {
      "PiedWeb\\Splates\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PiedWeb\\Splates\\Tests\\": "tests",
      "Templates\\": "exampleTemplateClass/Templates"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "4.0-dev"
    }
  },
  "scripts": {
    "stan": "vendor/bin/phpstan analyze src",
    "format": "vendor/bin/php-cs-fixer fix",
    "test": "phpunit --testdox --colors=always",
    "docs": "hugo -s doc server"
  }
}
